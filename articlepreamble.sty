% Resize margins:
\RequirePackage[top=1.5cm, bottom=2cm, left=3cm, right=2cm]{geometry}
\RequirePackage{hyperref} % Clickable links and table of contents.
\RequirePackage{natbib} % Citation package to cite by name (use plainnat
