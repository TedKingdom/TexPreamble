\RequirePackage{graphicx} % Graphics.
\RequirePackage{subcaption} % Get subfigure environment.
\RequirePackage{amsmath,amssymb,bm,mathtools} % Maths.
\RequirePackage{siunitx} % SI unit package.
\RequirePackage{enumerate} % Labels of the 'enumerate' environment.
